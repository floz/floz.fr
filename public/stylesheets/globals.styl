body
	font 14px Georgia, Helvetica, Arial, sans-serif
	background-color #f0f0f0
	color vgraylight
	padding-top 20px
	position relative

h2, strong
	color vgraydark

section 
	margin-top 20px

.bt
	color vgraydark
	background-color #fff
	text-decoration none
	padding 8px
	font 14px Quicksand
	border-radius 5px
	display inline-block
	&:hover
		background-color vorange
		color #fff

.layer
	position absolute
	background-color rgba(117, 109, 131, .7)
	width 290px
	height 140px
	.bts
		margin auto
		width 150px
		height 60px
		overflow hidden
		margin-top 40px
	.btzoom
		position relative
		float left
		width 56px
		height 56px
		.circle
			position absolute
			width 56px
			height 56px
			background-color rgba(255, 255, 255, .3)
			border-radius 30px
		.plus
			background-image url( "../images/icon_plus.png" )
			width 39px
			height 39px
			margin 8px auto 0px auto
	.bt
		float left
		background-color vorange
		color #fff
		font-size 10px
		margin-left 10px
		margin-top 12px
	.details
		position absolute
		bottom -40px
		background-color #fff
		height 40px
		width 100%
		span
			display block
			padding-left 10px
			padding-top 14px
			font 11px "Times New Roman"
			color vgraylight
	

#main
	position relative
	width 920px
	margin auto