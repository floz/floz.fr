#menu
	overflow hidden
	padding-bottom 20px
	border-bottom 1px dotted #c0c0c0

	li
		float left
		margin-left 10px
		opacity 0
		transition opacity 0.5s ease-out
		&:first-child
			margin-left 0px
		&.activated
			.bt
				background-color vorange
				color #fff
		&.hide
			opacity 0
		&.show
			opacity 1
