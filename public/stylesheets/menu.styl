@import "mixins"

#menu
	padding-bottom 20px
	border-bottom 1px dotted #c0c0c0
	li
		float left
		opacity 0
		antiflick()
		&.show
			transition all 0.5s ease-out
			opacity 1
			margin-left 10px
		&.hide
			opacity 0
			margin-left -10px
		&.activated
			.bt
				background-color vorange
				color #fff
		for i in 1 2
			&.d{i}
				transition-delay i * 0.125s
