@import 'nib'

vgraydark = #3d3944
vgraylight = #756d83
vgrayviolet = #a59ab9
vorange = #ff9c66

body
	font 14px Georgia, Helvetica, Arial, sans-serif
	background-color #f0f0f0
	color vgraylight
	padding-top 20px
	position relative

h2, strong
	color vgraydark

section 
	margin-top 20px

.bt
	color vgraydark
	background-color #fff
	text-decoration none
	padding 8px
	font 14px Quicksand
	border-radius 5px
	display inline-block

.layer
	position absolute
	background-color rgba(117, 109, 131, .7)
	width 290px
	height 140px
	.bts
		margin auto
		width 150px
		height 60px
		overflow hidden
		margin-top 40px
	.btzoom
		position relative
		float left
		width 56px
		height 56px
		.circle
			position absolute
			width 56px
			height 56px
			background-color rgba(255, 255, 255, .3)
			border-radius 30px
		.plus
			background-image url( "../images/icon_plus.png" )
			width 39px
			height 39px
			margin 8px auto 0px auto
	.bt
		float left
		background-color vorange
		color #fff
		font-size 10px
		margin-left 10px
		margin-top 12px
	.details
		position absolute
		bottom -40px
		background-color #fff
		height 40px
		width 100%
		span
			display block
			padding-left 10px
			padding-top 14px
			font 11px "Times New Roman"
			color vgraylight

#main
	position relative
	width 920px
	margin auto

#menu
	overflow hidden
	padding-bottom 20px
	border-bottom 1px dotted #c0c0c0
	a
		text-decoration none
		color vgraylight
		font 14px Quicksand
	li
		.content
			background-color #fff
			float left
			padding 7px
			border-radius 5px
			margin-right 10px
		&.activated
			.content
				background-color vorange
			a
				color #fff

#home
	.top
		font-weight bold
		h2, h3
			display inline
		h3
			color vgraydark
		h2
			color vorange
		.title
			font-size 58px
			line-height 54px
		.description
			font-size 48px
			line-height 44px
			div
				overflow hidden
		.skills
			position relative
			overflow hidden
			font-size 28px
			font-weight 300
			color vgrayviolet
			margin-top 5px
			margin-bottom 8px
			span
				display block
				float left
		.bt
			margin-bottom 20px
	.bot
		border-top 1px dotted vgraylight
		padding-top 20px
		h4
			font-size 28px
		ul
			overflow hidden
			margin-top 10px
		li
			position relative
			overflow hidden
			float left
			margin-left 9px
			&:first-child
				margin-left 0px
			h3
				display inline-block
				background-color #fff
				font 14px Quicksand
				padding 10px
			.project
				margin-top 2px
				border 5px solid #fff
				width 290px
				height 140px
				img
					position absolute
					width 290px
					height 140px
		&>.bt
			margin-top 10px
			margin-bottom 100px

vworkswidth = 220px
vworksheight = 200px
#works
	margin-top 10px
	li
		position relative
		overflow hidden
		float left
		width vworkswidth
		height vworksheight
		margin-right 1%
		margin-bottom 10px
		&:last-child
			margin-right 0
		h3
			position absolute
			background-color #fff
			font 14px Quicksand
			color vgraylight
			padding 7px 10px 7px 10px
		.project
			position absolute
			width vworkswidth
			height vworksheight
			img
				position absolute
			.layer
				display none
				width vworkswidth
				height vworksheight
				.bts
					margin-top 70px
		&:hover
			h3
				background-color vorange
				color #fff