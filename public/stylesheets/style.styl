@import 'nib'

vgraydark = #3d3944
vgraylight = #756d83
vgrayviolet = #a59ab9
vorange = #ff9c66

body
	font 14px Georgia, Helvetica, Arial, sans-serif
	background-color #f0f0f0
	color vgraylight
	padding-top 20px
	position relative

h2, strong
	color vgraydark

section 
	margin-top 20px

.bt
	color vgraydark
	background-color #fff
	text-decoration none
	padding 8px
	font 14px Quicksand
	border-radius 5px
	display inline-block

#main
	position relative
	width 920px
	margin auto

#menu
	overflow hidden
	padding-bottom 20px
	border-bottom 1px dotted #c0c0c0
	a
		text-decoration none
		color vgraylight
		font 14px Quicksand
	li
		list-style none
		.content
			background-color #fff
			float left
			padding 7px
			border-radius 5px
			margin-right 10px
		&.activated
			.content
				background-color vorange
			a
				color #fff

#home
	.top
		font-weight bold
		h2, h3
			display inline
		h3
			color vgraydark
		h2
			color vorange
		.title
			font-size 58px
			line-height 54px
		.description
			font-size 48px
			line-height 44px
			div
				overflow hidden
		.skills
			position relative
			overflow hidden
			font-size 28px
			font-weight 300
			color vgrayviolet
			margin-top 5px
			margin-bottom 8px
			span
				display block
				float left
		.bt
			margin-bottom 20px
	.bot
		border-top 1px dotted vgraylight
		padding-top 20px
		h4
			font-size 28px
		ul
			overflow hidden
			margin-top 10px
		li
			position relative
			overflow hidden
			list-style none
			float left
			margin-left 9px
			&:first-child
				margin-left 0px
			h3
				display inline-block
				background-color #fff
				font 14px Quicksand
				padding 10px
			.project
				margin-top 2px
				border 5px solid #fff
				width 290px
				height 140px
				img
					width 290px
					height 140px
			.details
				position absolute
				bottom -40px
				background-color #fff
				height 40px
				width 100%
				span
					display block
					padding-left 10px
					padding-top 14px
					font 11px "Times New Roman"
					color vgraylight
		.bt
			margin-top 10px
			margin-bottom 100px