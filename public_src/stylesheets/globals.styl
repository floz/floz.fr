body
	font 14px Georgia, Helvetica, Arial, sans-serif
	background-color #f0f0f0
	color vgraylight
	padding-top 20px
	position relative

h2, strong
	color vgraydark

section 
	margin-top 20px

.bt
	color vgraydark
	background-color #fff
	text-decoration none
	padding 8px
	font 14px Quicksand
	border-radius 5px
	display inline-block

.layer
	position absolute
	width 290px
	height 140px
	.background
		position absolute
		background-color rgba(117, 109, 131, .7)
		width 100%
		height 100%
		opacity 0
	.bts
		position relative
		margin auto
		width 150px
		height 60px
		margin-top 30px
	.btzoom
		position relative
		float left
		width 56px
		height 56px
		.circle
			position absolute
			width 58px
			height 58px
			background-color rgba(255, 255, 255, .3)
			border-radius 28px
			transform-origin 50% 50%
			backface-visibility hidden
			opacity 0
		.plus
			position absolute
			background-image url( "../images/icon_plus.png" )
			width 40px
			height 40px
			top 9px
			left 9px
			opacity 0
			transform-origin 50% 50%
			backface-visibility hidden
	.bt
		float left
		background-color vorange
		margin-top 14px
		margin-left 13px
		opacity 0
		.cnt
			display block
			width auto
			height 10px
		.txt
			color #fff
			font-size 10px
	.details
		position absolute
		bottom -40px
		background-color #fff
		height 40px
		width 100%
		.cnt
			display block
			height 11px
			width auto
			padding-left 10px
			padding-top 14px
			overflow hidden
		.txt
			display block
			position relative
			font 11px "Times New Roman"
			color vgraylight
			top 11px

.clear
	clear both

#main
	position relative
	width 920px
	margin auto