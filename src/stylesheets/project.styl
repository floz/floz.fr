#project
	display block
	.top
		overflow hidden
		padding-bottom 10px
		.left, .right 
			float left
		.left
			width 30%
			margin-right 4%
		.right 
			width 64%
	#page_title
		font-size h = 28px
		height h
		line-height h + 2px
		margin-bottom 10px
	#page_description
		color vgraydark
		margin-bottom 10px
		.holder
			margin-bottom 2px
	#page_description, #skills
		font-size h = 18px
		line-height h + 2px
		.holder
			height h

#skills
	margin-bottom 10px
	.title
		margin-right 10px
	.cnt
		overflow hidden
	.jobs
		color #ff9c66
		margin-bottom 10px

#bt_visit
	margin-top 20px

#offline
	margin-top 20px
	color vgrayviolet
	font-weight normal
	font-size 14px
	opacity 0

#project_description
	font-size 14px
	// font-weight bold
	font-weight normal
	line-height 17px
	margin-top 38px
	letter-spacing 1px
	.description
		position relative
		margin-bottom 10px
	.holder
		position relative

#diaporama
	position relative
	width 100%
	overflow hidden
	ul
		float left
		width 100%
	li
		height 380px
		overflow hidden
		margin-bottom 10px
		letter-spacing 1px
		.img
			position relative
			background-color gray
			height 380px
			float left
			width 75%
			margin-right 2%
		.cnt_img
			position absolute
			overflow hidden
			width 100%
			height 100%
			img
				position absolute
		.description
			float left
			width 22%
			line-height 17px
			font-size 13px
			// font-weight bold

#project
	@media( max-width: 768px )
		#page_title
			font-size h = 24px
			height h
			line-height h + 2px
		#page_description, #skills
			font-size h = 14px
			line-height h + 2px
			.holder
				height h
		#project_description
			font-size h = 12px
			line-height h + 2px
		#diaporama
			.description
				font-size h = 12px
				line-height h + 2px
	@media( max-width: 480px )
		.top
			overflow hidden
			padding-bottom 10px
			.left, .right 
				float none
			.left
				width 100%
				margin-right 4%
			.right 
				width 100%
		#project_description
			margin-top 20px
		#diaporama
			li
				height h = 180px
				.img
					height h
			.description
				font-size h = 10px
				line-height h + 2px
	@media( max-width: 380px )
		#diaporama
			li
				.img
					width 100%
			.description
				display none