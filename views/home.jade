include mixins

section#home
	article.top
		#page_title
			.scrolling_content HEY!

		#page_description
			.holder
				.scrolling_content I'M <h3>FLORIAN ZUMBRUNN</h3>,
			.holder
				.scrolling_content A <h2>CREATIVE DEVELOPER</h2>.
			.holder.small
				.scrolling_content <span>I LOVE TO CRAFT DIGITAL STUFF.</span>

		#skills
			-var skills = [ "HTML5", "CSS3", "JADE", "JS", "COFFEESCRIPT", "WEBGL", "SASS/STYLUS", "AS3", "UNITY3D", "C#", "PYTHON", "..." ]
			-for skill, i in skills
				.holder
					-if( i < skills.length - 1 )
						.emul= skill
							/
						.scrolling_content= skill
							/
					-else
						.emul= skill
						.scrolling_content= skill

	article.bot
		.holder
			h4.scrolling_content SOME OF MY <strong>PROJECTS:</strong>
		ul
			-for project in data
				li				
					a(href="/projects/"+project.id)
						span.cnt_project_title
							span.cnt
								span.project_title= project.title
						span.project_holder
							span.project
								span.cnt_img(data-url_img=project.preview)
									noscript
										img(src=project.preview, alt=project.title, width="300", height="150")
								span.layer
									span.background
									span.bts
										span.btzoom
											span.circle
											span.plus
										span.bt
											span.cnt
												span.txt VIEW MORE
									span.details 
										span.cnt
											span.txt= project.type
								- if( project.fwa == "true" )
									span.fwa
