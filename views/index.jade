extends layout
include mixins

block content
	section#home
		article.top
			.title.animated
				.content HEY!

			.description
				.holder.animated.d1
					.content I'M <h3>FLORIAN ZUMBRUNN</h3>,
				.holder.animated.d2
					.content A <h2>CREATIVE DEVELOPER</h2>.
				.holder.animated.d3
					.content <span>I LOVE TO CRAFT DIGITAL STUFF</strong>,
				.holder.animated.d4
					.content I WORK IN PARIS.</span>

			.skills
				-var skills = [ "HTML5/CSS3", "JADE", "JS", "COFFEESCRIPT", "SASS/STYLUS", "AS3", "FLASH REMOTING", "UNITY3D", "C#", "PYTHON", "PHP", "..." ]
				-for skill, i in skills
					if( i < skills.length - 1)
						span= skill
							/
					else
						span= skill

			a.bt(href="/#") 
				.content +MORE INFO

		article.bot
			h4 MY <strong>LAST PROJECTS:</strong>
			ul
				-for project in data
					li
						a(href="/works/"+project.id)
							h3= project.title
							.project
								img(src=project.preview, alt=project.title, width="300", height="150")
								.layer
									.bts
										.btzoom
											.circle
											.plus
										.bt VIEW MORE
									.details 
										span FLASH - HTML
			mixin bt( "+MORE PROJECTS", "/works" )
